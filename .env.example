# Database Configuration (MySQL/MariaDB for XAMPP)
DATABASE_URL=mysql://root:@localhost:3306/drisya

# Python Service Configuration
PYTHON_SERVICE_URL=http://localhost:5001

# Application URL (used in emails and links)
APP_URL=http://localhost:5000

# Email Configuration (SMTP)
# For Gmail: smtp.gmail.com, port 587
# For Outlook: smtp.office365.com, port 587
# For SendGrid: smtp.sendgrid.net, port 587
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@drisya.app

# Session Configuration (optional)
SESSION_SECRET=your-session-secret-here

# Node Environment
NODE_ENV=development
